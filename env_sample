# Flask設定
FLASK_APP=app.main
FLASK_ENV=development
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-here

# データベース設定
DATABASE_PATH=names.db
NAME_DB_PATH=names.db

# ログレベル設定
LOG_LEVEL=INFO

# アプリケーション設定
TIMEOUT=3600
MAX_CONCURRENT_REQUESTS=4

# スクレイピング設定
SCRAPING_DELAY=0.5
REQUEST_TIMEOUT=30

# セキュリティ設定
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
# SSL検証を有効化（本番環境では必須）
SSL_VERIFY=True
# セキュリティヘッダー
SECURITY_HEADERS=True

# 外部API設定
ENAMAE_BASE_URL=https://enamae.net
NAMAEURANAI_BASE_URL=https://namaeuranai.biz

# 本番環境用設定
# 本番環境では以下の設定を使用してください
# FLASK_ENV=production
# FLASK_DEBUG=False
# LOG_LEVEL=WARNING
# SSL_VERIFY=True
# REQUEST_TIMEOUT=10 